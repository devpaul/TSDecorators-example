{
	"version": "1.5.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"experimentalDecorators": true
	},
	"filesGlob": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/**/*.d.ts",
		"./tests/typings/**/*.d.ts",
		"./node_modules/intern/typings/**/*.d.ts",
		"./node_modules/reflect-metadata/reflect-metadata.d.ts"
	],
	"files": [
		"./src/examples/class.ts",
		"./src/examples/factory.ts",
		"./src/examples/metadata.ts",
		"./src/examples/method.ts",
		"./src/examples/parameter.ts",
		"./src/examples/property.ts",
		"./src/metadata.ts",
		"./tests/intern-local.ts",
		"./tests/intern.ts",
		"./tests/typings/sinon/sinon.d.ts",
		"./tests/unit/all.ts",
		"./tests/unit/metadata.ts",
		"./tests/unit/method.ts",
		"./node_modules/intern/typings/chai/chai.d.ts",
		"./node_modules/intern/typings/digdug/digdug.d.ts",
		"./node_modules/intern/typings/dojo2/dojo.d.ts",
		"./node_modules/intern/typings/intern/intern.d.ts",
		"./node_modules/intern/typings/leadfoot/leadfoot.d.ts",
		"./node_modules/intern/typings/node/node.d.ts",
		"./node_modules/reflect-metadata/reflect-metadata.d.ts"
	]
}
